version: '2'

services:

  nginx:
    image: nginx
    restart: always
    container_name: nginx
    ports:
      - 80:80
      - 443:443
    working_dir: /var/www
    links:
      - php
    volumes:
      - ${PATH_TO_SITES}:/var/www
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf
    depends_on:
      - php

  php:
    build: ./php
    restart: always
    hostname: php
    container_name: php
    ports:
      - 9000:9000
    working_dir: /var/www
    volumes:
      - ${PATH_TO_SITES}:/var/www
      - ./php/php.ini:/usr/local/etc/php/php.ini
    depends_on:
      - mysql

  mysql:
    image: mariadb
    restart: always
    hostname: mysql
    container_name: mysql
    volumes:
      - ${MYSQL_DB_PATH}:/var/lib/mysql
      - ./sql/my.cnf:/etc/mysql/my.cnf
      - /home/volkovi/programs/databases:/home
    environment:
      MYSQL_ROOT_PASSWORD: ${MYSQL_ROOT_PASSWORD}
    ports:
    - 127.0.0.1:3306:3306

  phpmyadmin:
    image: phpmyadmin/phpmyadmin
    restart: always
    hostname: phpmyadmin
    container_name: phpmyadmin
    domainname: phpmyadmin.loc
    links:
      - mysql:db
    ports:
      - ${PHP_MY_ADMIN_PORT}:80
    environment:
      MYSQL_ROOT_PASSWORD: ${MYSQL_ROOT_PASSWORD}
    depends_on:
      - mysql
